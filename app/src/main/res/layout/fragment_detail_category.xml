<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.category.DetailCategoryFragment">

    <Button
        android:id="@+id/back_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/back_icon"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintHorizontal_bias="0"
        android:layout_margin="20dp"/>
    <Button
        android:id="@+id/delete_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/delete_icon"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.08"
        app:layout_constraintHorizontal_bias="1"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/edit_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/edit_icon"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.08"
        app:layout_constraintHorizontal_bias="0.85"
        android:layout_margin="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/name_category"
        android:text="Work"
        android:fontFamily="@font/font"
        android:textColor="@color/blue"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/back_button"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/bg_button_category"
        android:paddingHorizontal="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:layout_marginVertical="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Total: "
        app:layout_constraintBottom_toBottomOf="@id/name_category"
        app:layout_constraintTop_toTopOf="@id/name_category"
        android:textSize="17sp"
        android:fontFamily="@font/font"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/total_task"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/name_category"
        android:layout_marginVertical="15dp"
        app:layout_constraintBaseline_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>